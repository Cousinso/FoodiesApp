    <CheckBox
        android:id="@+id/ChFood"
        android:layout_width="117dp"
        android:layout_height="36dp"
        android:text="Chinese food"
        app:layout_constraintStart_toStartOf="@+id/Food_Preference"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <CheckBox
        android:id="@+id/IrFood"
        android:layout_width="95dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="Irish food "
        app:layout_constraintStart_toEndOf="@+id/ChFood"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <CheckBox
        android:id="@+id/InFood"
        android:layout_width="109dp"
        android:layout_height="33dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="Indian food"
        app:layout_constraintStart_toEndOf="@+id/IrFood"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <CheckBox
        android:id="@+id/BelgFood"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:text=" Belgium food"
        app:layout_constraintStart_toStartOf="@+id/Food_Preference"
        app:layout_constraintTop_toBottomOf="@+id/ChFood" />

    <CheckBox
        android:id="@+id/JapFood"
        android:layout_width="158dp"
        android:layout_height="36dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="Japanese food"
        app:layout_constraintStart_toEndOf="@+id/BelgFood"
        app:layout_constraintTop_toBottomOf="@+id/IrFood" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="12dp"
        android:background="#4B000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/JapFood" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Food Types"
        android:textColor="#DDFF9800"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/Food_Preference"
        app:layout_constraintTop_toBottomOf="@+id/Food_Preference" />

</androidx.constraintlayout.widget.ConstraintLayout>