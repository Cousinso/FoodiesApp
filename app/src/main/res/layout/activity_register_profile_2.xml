<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".Register1Activity">

    <CheckBox
        android:id="@+id/breakfast"
        android:layout_width="104dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:text="Breakfast"
        app:layout_constraintStart_toEndOf="@+id/lactose"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <CheckBox
        android:id="@+id/lunch"
        android:layout_width="87dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="Lunch"
        app:layout_constraintStart_toEndOf="@+id/milk"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <CheckBox
        android:id="@+id/dinner"
        android:layout_width="89dp"
        android:layout_height="45dp"
        android:text="Dinner"
        app:layout_constraintStart_toStartOf="@+id/hint1_"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Preference of the meal time"
        android:textColor="#DDFF9800"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/Food_Preference"
        app:layout_constraintTop_toBottomOf="@+id/register_radioGroup_Meat" />

    <CheckBox
        android:id="@+id/teaCoffee"
        android:layout_width="142dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:text="Tea/Coffee"
        app:layout_constraintStart_toEndOf="@+id/pork"
        app:layout_constraintTop_toBottomOf="@+id/lunch" />

    <CheckBox
        android:id="@+id/brunch"
        android:layout_width="84dp"
        android:layout_height="45dp"
        android:text="Brunch"
        app:layout_constraintStart_toStartOf="@+id/hint1_"
        app:layout_constraintTop_toBottomOf="@+id/lunch" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="#4B000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fish" />

    <RadioGroup
        android:id="@+id/register_radioGroup_Meat"
        android:layout_width="343dp"
        android:layout_height="58dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/hint1_"
        app:layout_constraintTop_toBottomOf="@+id/hint1_">

        <RadioButton
            android:id="@+id/radio_vegan"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:text="Vegan" />

        <RadioButton
            android:id="@+id/radio_vegatarian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Vegetarian" />

        <RadioButton
            android:id="@+id/radio_meat"
            android:layout_width="178dp"
            android:layout_height="match_parent"
            android:text="Meat lover" />

    </RadioGroup>

    <TextView
        android:id="@+id/hint1_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:text="Are you..."
        android:textColor="#DDFF9800"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/Food_Preference"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <CheckBox
        android:id="@+id/fish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="Fish"
        app:layout_constraintStart_toEndOf="@+id/pork"
        app:layout_constraintTop_toBottomOf="@+id/lactose" />

    <CheckBox
        android:id="@+id/pork"
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:text="Pork"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/milk" />

    <CheckBox
        android:id="@+id/milk"
        android:layout_width="66dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:text="Milk"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <CheckBox
        android:id="@+id/nuts"
        android:layout_width="83dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:text="Nuts"
        app:layout_constraintStart_toEndOf="@+id/lactose"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <CheckBox
        android:id="@+id/lactose"
        android:layout_width="87dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:text="Lactose "
        app:layout_constraintStart_toEndOf="@+id/milk"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Allergies /Intollerancies"
        android:textColor="#DDFF9800"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/Food_Preference"
        app:layout_constraintTop_toBottomOf="@+id/Food_Preference" />

    <TextView
        android:id="@+id/Food_Preference"
        android:layout_width="346dp"
        android:layout_height="36dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Food Preference"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="11pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/ButtonFinish"
        android:layout_width="113dp"
        android:layout_height="43dp"
        android:layout_marginTop="508dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_edittext"
        android:text="Finish"
        app:backgroundTint="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Food_Preference"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/Food_Preference"
        app:layout_constraintTop_toBottomOf="@+id/Food_Preference"
        app:layout_constraintVertical_bias="0.865" />

<!--    <ListView-->
<!--        android:id="@+id/list_view"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
